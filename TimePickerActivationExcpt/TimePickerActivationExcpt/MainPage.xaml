<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimePickerActivationExcpt.MainPage">

    <StackLayout>
        <Label Text="TimePicker Activation Exception Sample" FontSize="Title"/>
        <StackLayout Padding="30,10,30,10">
            <Label Text="Repo steps:" FontSize="Default"  FontAttributes="Bold"/>
            <Label Text="Navigate to TimePicker page" FontSize="Default"/>
            <Label Text="Open the TimePicker" FontSize="Default"/>
            <Label Text="Tap Ok or Cancel in the picker popup" FontSize="Default"/>
        </StackLayout>
        <Button Text="Go to TimePicker page" Clicked="Button_Clicked"></Button>
        <Label FontSize="Default" FontAttributes="Italic">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="NOTE: " FontAttributes="Bold"/>
                        <Span Text="To fix the error, go to MyTimePickerRenderer.cs and uncomment lines 42-45"/>
                        <Span Text="MyTimePickerRenderer.cs" FontAttributes="Italic" />
                        <Span Text="and uncomment lines 42-45"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>

</ContentPage>
